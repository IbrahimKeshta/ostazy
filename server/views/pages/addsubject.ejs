<!-- views/pages/addsubject -->
<!doctype html>
<html>
<head>
    <title>Add Subject</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="glyphicon glyphicon-plus"></span> Add Subject</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <!-- Subject FORM -->
    <form action="/subjects" method="post">
        <div class="form-group">
            <label>title</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="form-group">
            <label>Field</label>
            <label class="radio-inline"><input type="radio" name="field" value="grammar">Grammar</label>
            <label class="radio-inline"><input type="radio" name="field" value="story">Story</label>
            <label class="radio-inline"><input type="radio" name="field" value="exercises">Exercises</label>
        </div>

        <div class="form-group">
            <label>Youtube Link</label>
            <input type="text" class="form-control" name="ytLink">
        </div>
        <div class="form-group">
            <label>Document</label>
            <textarea class="form-control" rows="5" id="document" name="document"></textarea>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Add</button>
    </form>

    <hr>

    <p>All subjects <a href="/allsubjects">All subjects</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>
</body>
</html>